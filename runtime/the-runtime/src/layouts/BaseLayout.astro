---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const { title = "Chova", description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <slot name="head" />
  </head>
  <body class="h-full bg-black text-white flex items-center justify-center">
    <slot />
  </body>
</html>
